<div class='container'>

    <div class = 'hero' title= 'burger'></div>
    <h2>What's your favorite?</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="bg">Burger Name:</label>
            <input type="text" id="bg" name="name">
        </div>
        <button class='add-burger' type="submit">Add Burger</button>

    </form>
    <div class='container main-content'>
        <div class="row">
            <div class="col">
                <h2 id="ready-to-eat">Ready!</h2>
                <ul>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devour=true}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col">
                <h2 id='eaten'>Yum!!</h2>

                <ul>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devour=false}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>
    </div>


</div>
