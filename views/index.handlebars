<h1 class="header center">Eat-Burgers!</h1>

<div class="img center">
  <img src="https://www.uokpl.rs/fpng/f/13-134730_burger-emoji-png.png" class= "burgerImg" alt="a burger">
</div>
<div class="wrapper">
<div class="uneaten ">
  <h2>Burgers that are not devoured!</h2>

  <ul>
    {{#each burgers}}
      {{#unless devour}}
        {{> burgers/burger-block devour=true}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="eaten ">
  <h2>Burgers that have been devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devour}}
      {{> burgers/burger-block devour=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
</div>

<div class="addBurger clear center">
  <h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Name:</label>
    <input type="text" id="ca" name="name">
  </div>

  <div class="form-group">
    <label for="devour">Devoured?</label><br> 
    <input type="radio" name="devour" value="1" checked> Devoured!<br>
    <input type="radio" name="devour" value="0"> Not Yet!
  </div>

  <button type="submit">Add Burger</button>
</form>
</div>


